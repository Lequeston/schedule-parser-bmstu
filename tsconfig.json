{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "config",
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
  ],
  "include": [
    "src/**/*"
  ]
}